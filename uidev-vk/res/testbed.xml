<layout>
  <elements>
    <!-- 1/3 red rect -->
    <div width="100%" padding="16" box_sizing="content_box" flex_wrap="wrap" gap="16" align_content="flex_start">
      <rectangle color="#224466" width="96" height="64">
        <label text="first rect" color="#FFFFFF" />
      </rectangle>
      <rectangle color="#664422" width="96" height="64">
        <label text="second rect" color="#FFFFFF" />
      </rectangle>
      <rectangle color="#226644" width="64" height="64" />
      <rectangle color="#001122" width="64" height="64" />
      <rectangle color="#99AAFF" round="1.0" width="128" height="128" align_items="center" justify_content="center" border="8" border_color="#FFFFFF">
        <label text="I'm centered" color="#FF0000" weight="bold" />
      </rectangle>
      <label text="I'm a text!" color="#0000FF" />
      <label text="I'm a bold text!" color="#0000FF" weight="bold" />
      <label text="I'm a BIG text!" color="#0000FF" weight="bold" size="20" />
      <rectangle width="400" height="300" round="0.5" id="my_div_parent" color="#FFCC99" align_items="center" align_content="flex_start" justify_content="center" flex_wrap="wrap" gap="8" padding="16" border="2" border_color="#ffffff">
        <!-- filled-in at runtime -->
      </rectangle>
    </div>
    <!-- 2/3 green rects -->
    <div width="100%" height="100%" flex_direction="column">
      <rectangle color="#44aa33" color2="#3344aa" round="0.1" gradient="horizontal" height="100%" border="2" border_color="#ffffff">
        <div margin="16" width="100%" height="100%" align_items="center" justify_content="center" flex_wrap="wrap" align_content="center">
          <rectangle width="64" height="64" color="#000000" />
          <rectangle width="64" height="64" color="#002222" />
          <rectangle width="64" height="64" color="#004444" />
          <rectangle width="64" height="64" color="#006666" />
        </div>
      </rectangle>
      <rectangle color="#aaff88" color2="#88aaff" round="0.1" gradient="vertical" height="100%">
        <div margin="16" width="100%" height="100%" flex_wrap="wrap" gap="16" align_content="flex_start">
          <rectangle width="64" height="32" color="#ff0000" />
          <rectangle width="64" height="32" color="#ff0000" border="2" border_color="#000000" />
          <rectangle width="64" height="32" color="#ff0000" border="4" border_color="#000000" />
          <rectangle width="64" height="32" color="#ff0000" border="6" border_color="#000000" />
          <rectangle width="64" height="32" color="#ff0000" border="8" border_color="#000000" />
          <rectangle width="64" height="64" color="#000000" border="2" round="1.0" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="8" round="1.0" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="16" round="1.0" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="30" round="1.0" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="2" round="0.5" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="8" round="0.5" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="12" round="0.5" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="13" round="0.5" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="14" round="0.5" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="15" round="0.5" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="16.5" round="0.5" border_color="#FFFF00" />
          <rectangle width="64" height="64" color="#000000" border="30" round="0.5" border_color="#FFFF00" />
          <rectangle color="#000000">
            <rectangle width="200" height="100" color="#ffffff" margin="2" />
          </rectangle>
        </div>
      </rectangle>
    </div>
    <!-- 3/3 yellow rect -->
    <rectangle color="#ffff99" width="100%" height="100%" flex_direction="column" padding="16">
      <div height="100%">
        <label text="Multi line test #1&#xA;This is aligned to the left." align="left" size="20" color="#330000" />
        <rectangle width="100%" height="1" />
      </div>
      <div height="100%">
        <label text="Multi line test #2&#xA;This is aligned to the right." align="right" size="20" color="#330000" />
        <rectangle width="100%" height="1" />
      </div>
      <div height="100%">
        <label text="Multi line test #3&#xA;This is aligned to the center.&#xA;The longer lines are still alinged to the center." align="center" size="20" color="#330000" />
        <rectangle width="100%" height="1" />
      </div>
      <div height="100%">
        <label text="Multi line test #4&#xA;This is justified alignment.&#xA;The longer lines are the same length as the shorter lines." align="justified" size="20" color="#330000" />
        <rectangle width="100%" height="1" />
      </div>
    </rectangle>
  </elements>
</layout>